# sweatybot.py
import streamlit as st
import json
from openai import OpenAI

# ------------------------------
# ğŸ”§ PAGE SETUP
# ------------------------------
st.set_page_config(
    page_title="ğŸ’¬ SweatyBot â€“ Fabric Advisor",
    page_icon="ğŸ‘•",
    layout="centered",
    initial_sidebar_state="expanded"
)

st.title("ğŸ’¬ Meet SweatyBot â€“ Your Fabric Advisor")
st.caption("ğŸ‘• Helping you find sweat-proof, eco-friendly, and comfy fabrics based on science and your needs!")

# ------------------------------
# ğŸ”‘ API KEY HANDLING
# ------------------------------
if "api_key" not in st.session_state:
    if "openai" in st.secrets and "api_key" in st.secrets["openai"]:
        st.session_state.api_key = st.secrets["openai"]["api_key"]
    else:
        st.warning("âš ï¸ Missing API key! Please add it to Streamlit Secrets.")
        st.info("""
        ğŸ‘‰ Go to Streamlit Cloud â†’ âš™ï¸ Settings â†’ Secrets â†’ Add this:
        ```
        [openai]
        api_key = "sk-proj-your_api_key_here"
        ```
        """)
        st.stop()

# Initialize OpenAI Client
client = OpenAI(api_key=st.session_state.api_key)

# ------------------------------
# ğŸŒ Sidebar Settings
# ------------------------------
with st.sidebar:
    st.header("ğŸ§­ Personalize Your Preferences")
    activity = st.selectbox("ğŸƒ Activity Level", ["Low", "Moderate", "High"])
    climate = st.selectbox("ğŸŒ¡ï¸ Climate Type", ["Hot", "Humid", "Cold", "Moderate"])
    eco_friendly = st.checkbox("ğŸŒ± Prefer Eco-friendly Fabrics?", value=True)
    st.markdown("---")
    st.markdown("ğŸ’¡ Adjust these for a more personalized conversation!")

# ------------------------------
# ğŸ§  Conversation Initialization
# ------------------------------
if "messages" not in st.session_state:
    system_prompt = (
        f"You are SweatyBot, an intelligent and friendly fabric advisor chatbot. "
        f"The user prefers '{activity}' activity in '{climate}' climate. "
        f"Eco-friendly preference: {eco_friendly}. "
        f"Always provide scientific yet easy-to-understand insights about fabrics, "
        f"moisture control, thermal regulation, and sweat resistance."
    )
    st.session_state.messages = [
        {"role": "system", "content": system_prompt},
        {"role": "assistant", "content": "Hi ğŸ‘‹ I'm SweatyBot! Ask me about sweat-resistant, breathable, or eco-friendly fabrics."}
    ]

# ------------------------------
# ğŸ’¬ Display Chat Messages
# ------------------------------
for msg in st.session_state.messages:
    with st.chat_message(msg["role"]):
        st.markdown(msg["content"])

# ------------------------------
# âœï¸ User Input
# ------------------------------
if user_input := st.chat_input("Ask SweatyBot anything about fabrics..."):
    st.session_state.messages.append({"role": "user", "content": user_input})

    with st.chat_message("user"):
        st.markdown(user_input)

    with st.chat_message("assistant"):
        placeholder = st.empty()
        placeholder.markdown("ğŸ’­ Thinking...")

        try:
            response = client.chat.completions.create(
                model="gpt-4o-mini",  # You can use "gpt-4-turbo" too
                messages=st.session_state.messages,
                max_tokens=600,
                temperature=0.8
            )
            reply = response.choices[0].message.content
        except Exception as e:
            reply = f"âš ï¸ Error: {str(e)}"

        placeholder.markdown(reply)
        st.session_state.messages.append({"role": "assistant", "content": reply})

        # Optional JSON-based response display
        try:
            fabrics = json.loads(reply)
            if isinstance(fabrics, list):
                st.markdown("### ğŸ§µ Fabric Recommendations")
                st.table(fabrics)
        except Exception:
            pass

# ------------------------------
# ğŸ“œ Expandable Chat History
# ------------------------------
with st.expander("ğŸ’¬ View Chat History"):
    for msg in st.session_state.messages:
        role = "ğŸ‘¤ You" if msg["role"] == "user" else "ğŸ¤– SweatyBot"
        st.markdown(f"**{role}:** {msg['content']}")
